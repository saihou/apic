<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/ColorAccent</item>
    </style>

    <style name="UberAppTheme" parent="UberAppTheme.Base"></style>
    <style name="UberAppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/uberThemePrimary</item>
        <item name="colorPrimaryDark">@color/uberThemePrimaryDark</item>
        <item name="colorAccent">@color/uberThemeColorAccent</item>
    </style>

    <!--Style for bottom_sheet-->
    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="bs_dialogBackground">@color/ColorAccent</item>
        <item name="bs_dividerColor">@color/lightGrey</item>
        <item name="bs_numColumns">2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
